---
import Layout from '~/layouts/PageLayout.astro';

import Features from '~/components/widgets/Features.astro';
import IconProgramming from '~/components/icons/IconProgramming.astro';

const metadata = {
  title: 'AstroWind â€” Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <main>
    <section class="md:px-36">
      <div class="py-10 mx-auto max-w-6xl lg:py-14">
        <IconProgramming />
        <h1 class="text-4xl font-bold leading-tighter tracking-tighter my-3 text-center">
          Welcome to Samuel Almeida's personal site.
        </h1>

        <p class="text-md text-gray-600 mb-8 dark:text-slate-400 text-center">
          I work as a Full Stack Engineer and enjoy exploring many IT-related subjects.
        </p>
      </div>

      <Features
        id="features"
        tagline="TECHNOLOGIES"
        title="What I used to build this site"
        items={[
          {
            title: 'Astro',
            description: 'Build faster websites.',
            icon: 'mdi:card',
          },
          {
            title: 'TypeScript',
            description: 'A strongly typed programming language that builds on JavaScript.',
            icon: 'mdi:card',
          },
          {
            title: 'AstroWind Theme',
            description: 'Astro template to kickstart your website.',
            icon: 'mdi:card',
          },
          {
            title: 'TailwindCSS',
            description: 'A utility-first CSS framework.',
            icon: 'mdi:card',
          },
          {
            title: 'React',
            description: 'A JavaScript library for building user interfaces.',
            icon: 'mdi:card',
          },
          {
            title: 'unDraw',
            description: 'The design project with open-source illustrations.',
            icon: 'mdi:card',
          },
        ]}
        classes={{
          container: 'bg-blue-50 dark:bg-slate-800',
          title: 'md:font-bold',
          description: 'md:font-normal text-black dark:text-slate-400',
        }}
      />
    </section>
  </main>
</Layout>
