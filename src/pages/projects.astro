---
import Content from "~/components/widgets/Content.astro";
import Layout from "~/layouts/Layout.astro";

const metadata = {
  title: 'Projects',
};
---

<Layout metadata={metadata}>
  <main>
    <section>
      <div class="w-full mx-auto">
        <div class="md:px-36">
          <Content
            items={[
              {
                icon: 'mdi:package-variant-closed',
                title: 'Description',
                description: 'Benefiting from the perthis modern static site generator.',
              },
              {
                icon: '',
                title: 'Links',
                description: 'Facilitating rapid dar utility-first CSS framework.',
              }
            ]}
            image={{
              src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
              alt: 'Colorful Image',
            }}
          >
            <Fragment slot="content">
              <h3 class="text-md font-bold tracking-tight dark:text-white sm:text-xl">
                Building on modern foundations
              </h3>
            </Fragment>
          </Content>
        </div>
      </div>
    </section>
  </main>
</Layout>

