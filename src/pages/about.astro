---
import Hero from '~/components/widgets/Hero.astro';
import Steps from '~/components/widgets/Steps.astro';
import Layout from '~/layouts/PageLayout.astro';
import Technologies from '~/components/Technologies.astro';
import myImage from '~/assets/images/me.jpg';

const metadata = {
  title: 'About us',
};

const experiences = [
  {
    title: 'Full Stack .NET Developer',
    company: 'Grupo Apisul',
    period: 'Nov 2023 - Jul 2025',
    details: [
      'Developed internal applications',
      'Maintained and optimized APIs',
      'Collaborated with design team on UI improvements'
    ],
    icon: 'tabler:briefcase',
  },
  {
    title: 'Full Stack .NET Junior Developer',
    company: 'GVDASA',
    period: 'Sep 2021 - Oct 2023',
    details: [
      'Worked on school management systems',
      'Implemented new features for reporting',
      'Provided bug fixes and support'
    ],
    icon: 'tabler:briefcase',
  },
  {
    title: 'Junior Technician VII',
    company: 'SKA Automação de Engenharias',
    period: 'Jan 2021 - Sep 2021',
    details: [
      'Assisted in CAD software automation',
      'Provided technical support to engineering teams'
    ],
    icon: 'tabler:briefcase',
  },
  {
    title: 'Thank you for reading!',
    icon: 'tabler:mood-happy',
  },
];
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Elevate your online presence with our <br />
      <span class="text-accent dark:text-white"> Beautiful Website Templates</span>
    </Fragment>

    <Fragment slot="subtitle">
      Donec efficitur, ipsum quis congue luctus, mauris magna convallis mauris, eu auctor nisi lectus non augue. Donec
      quis lorem non massa vulputate efficitur ac at turpis. Sed tincidunt ex a nunc convallis, et lobortis nisi tempus.
      Suspendisse vitae nisi eget tortor luctus maximus sed non lectus.
    </Fragment>
  </Hero>

  <Steps
    title="Experiences"
    items={experiences.map(exp => ({
      title: exp.title,
      description: exp.company 
        ? `${exp.company}<br/>${exp.period || ''}<br/>${exp.details ? exp.details.join('<br/>') : ''}`
        : '',
        icon: exp.icon
    }))}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <Technologies />
</Layout>
