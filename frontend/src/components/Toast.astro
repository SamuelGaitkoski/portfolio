<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css" />

<script type="module">
  import { Notyf } from 'https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js';

  window.showToast = (type, message) => {
    const notyf = new Notyf({
      duration: 3000,
      position: { x: 'right', y: 'top' },
      types: [
        {
          type: 'success',
          background: document.documentElement.classList.contains('dark') ? '#16a34a' : '#22c55e',
          icon: false,
        },
        {
          type: 'error',
          background: document.documentElement.classList.contains('dark') ? '#dc2626' : '#ef4444',
          icon: false,
        },
      ],
    });

    notyf[type](message);
  };
</script>
